{
    "id": "testing.litmus",
    "description": "Used for testing.",
    "config": {
        "source": {
            "path": "vendor/streams/core/tests/data/litmus",
            "format": "json"
        }
    },
    "rules": {
        "uuid": [
            "required"
        ],
        "number": [
            "min:10"
        ],
        "integer": [
            "max:100"
        ]
    },
    "fields": [
        {
            "handle": "uuid",
            "type": "uuid"
        },
        {
            "handle": "number",
            "type": "number"
        },
        {
            "handle": "decimal",
            "type": "decimal"
        },
        {
            "handle": "integer",
            "type": "integer"
        },
        {
            "handle": "string",
            "type": "string"
        },
        {
            "handle": "email",
            "type": "email"
        },
        {
            "handle": "markdown",
            "type": "markdown"
        },
        {
            "handle": "datetime",
            "type": "datetime"
        },
        {
            "handle": "date",
            "type": "date"
        },
        {
            "handle": "time",
            "type": "time"
        },
        {
            "handle": "boolean",
            "type": "boolean"
        },
        {
            "handle": "array",
            "type": "array"
        },
        {
            "handle": "select",
            "type": "select",
            "config": {
                "options": {
                    "foo": "Foo",
                    "bar": "Bar"
                }
            }
        },
        {
            "handle": "select_callable_options",
            "type": "select",
            "config": {
                "options": "Streams\\Core\\Testing\\SelectHandler@handle"
            }
        },
        {
            "handle": "multiselect",
            "type": "multiselect",
            "config": {
                "options": {
                    "foo": "Foo",
                    "bar": "Bar"
                }
            }
        },
        {
            "handle": "multiselect_callable_options",
            "type": "multiselect",
            "config": {
                "options": "Streams\\Core\\Testing\\MultiselectHandler@handle"
            }
        },
        {
            "handle": "url",
            "type": "url"
        },
        {
            "handle": "hash",
            "type": "hash"
        },
        {
            "handle": "encrypted",
            "type": "encrypted"
        },
        {
            "handle": "slug",
            "type": "slug"
        },
        {
            "handle": "color",
            "type": "color"
        },
        {
            "handle": "file",
            "type": "file"
        },
        {
            "handle": "image",
            "type": "image"
        },
        {
            "handle": "relationship",
            "type": "relationship",
            "config": {
                "related": "testing.examples"
            }
        },
        {
            "handle": "multiple",
            "type": "multiple",
            "config": {
                "related": "testing.examples"
            }
        }
    ]
}
