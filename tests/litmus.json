{
    "handle": "testing.litmus",
    "description": "Used for testing.",
    
    "source": {
        "path": "vendor/streams/core/tests/data/litmus",
        "format": "json"
    },

    "rules": {
        "number": "required"
    },

    "fields": {
        "number": {
            "type": "number"
        },
        "integer": {
            "type": "integer"
        },
        "string": {
            "type": "string"
        },
        "email": {
            "type": "email"
        },
        "datetime": {
            "type": "datetime"
        },
        "date": {
            "type": "date"
        },
        "time": {
            "type": "time"
        },
        "boolean": {
            "type": "boolean"
        },
        "array": {
            "type": "array"
        },
        "object": {
            "type": "prototype",
            "config.abstract": "Streams\\Core\\Tests\\Field\\Type\\ExampleAbstract"
        },
        "select": {
            "type": "select",
            "config.options": {
                "foo": "Bar",
                "baz": "Baz"
            }
        },
        "multiselect": {
            "type": "multiselect",
            "config.options": {
                "foo": "Foo",
                "bar": "Bar",
                "baz": "Baz"
            }
        },
        "url": {
            "type": "url"
        },
        "hash": {
            "type": "hash"
        },
        "color": {
            "type": "color"
        },
        "file": {
            "type": "file"
        },
        "image": {
            "type": "image"
        },
        "entry": {
            "type": "entry"
        },
        "entries": {
            "type": "entries"
        }
    }
}
