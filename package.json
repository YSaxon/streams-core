{
    "name": "@laravel-streams/core",
    "version": "1.0.13",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "types": "resources/public/types/index.d.ts",
    "main": "resources/public/js/index.js",
    "module": "resources/public/js/index.esm.js",
    "scripts": {
        "dev": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "prod:window": "STREAMS_EXPORT=window mix --production",
        "prod:module": "STREAMS_EXPORT=module mix --production",
        "prod:umd": "STREAMS_EXPORT=umd mix --production",
        "prod:all": "npm-run-all prod prod:module prod:umd prod:window",
        "build": "npm-run-all test clean prod:all dts dts:copy doc doc:md",
        "clean": "npm-run-all clean:dts clean:doc",
        "clean:dts": "rimraf ./resources/public/types",
        "clean:doc": "rimraf ./client-api",
        "doc": "typedoc --options ./typedoc.js",
        "doc:md": "STREAMS_API_MD_DOCS=true typedoc --options ./typedoc.js",
        "dts": "tsc --project webpack.tsconfig.json --emitDeclarationOnly",
        "dts:copy": "cp resources/lib/global.d.ts resources/public/js/global.d.ts",
        "test": "mocha"
    },
    "nyc": {
        "check-coverage": true,
        "lines": 80,
        "statements": 80,
        "functions": 80,
        "branches": 80,
        "include": [
            "resources/lib/**/*.ts"
        ],
        "exclude": [
            "test/**/*.ts"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "all": true
    },
    "dependencies": {
        "axios": "^0.21.4",
        "debug": "^4.3.2",
        "eventemitter2": "^6.4.4",
        "inversify": "^5.1",
        "inversify-inject-decorators": "^3.1",
        "reflect-metadata": "^0.1.13",
        "lz-string": "^1.4.4"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "pretender": "^3.4.7",
        "yargs-parser": "^20.2.9",
        "@types/yargs-parser": "^20.2.1",
        "jsdom": "^18.0.0",
        "@types/jsdom": "^16.2.13",
        "btoa": "^1.2.1",
        "@types/btoa": "^1.2.3",
        "@types/lz-string": "^1.3.34",
        "@types/debug": "^4.1.7",
        "faker": "^5.5.3",
        "@types/faker": "^5.5.8",
        "@types/qs": "^6.9.7",
        "webpack-cli": "^4.8.0",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/preset-env": "^7.15.6",
        "@testdeck/mocha": "^0.1.2",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.1",
        "@types/should": "^13.0.0",
        "@types/should-sinon": "^0.0.8",
        "@types/sinon": "^10.0.4",
        "@types/sinon-chai": "^3.2.5",
        "@types/superagent": "^4.1.13",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "dotenv": "^10.0.0",
        "laravel-mix": "^6.0",
        "lodash": "^4.17",
        "mocha": "^9.1.2",
        "nyc": "^15.1.0",
        "postcss": "^8.1",
        "rimraf": "^3.0.2",
        "should": "^13.2.3",
        "should-sinon": "^0.0.6",
        "sinon": "^11.1.2",
        "sinon-chai": "^3.7.0",
        "source-map-support": "^0.5.20",
        "ts-loader": "^8.3.0",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.3",
        "webpack-merge": "^5.8.0"
    }
}
