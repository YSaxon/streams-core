{
    "name": "@laravel-streams/core",
    "version": "1.0.13",
    "publishConfig": {
        "access": "public"
    },
    "types": "./resources/public/types/index.d.ts",
    "main": "./resources/public/js/index.js",
    "module": "./resources/lib/index.ts",
    "scripts": {
        "dev": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "mix --production",
        "build": "npm-run-all test clean prod dts dts:copy doc doc:md",
        "clean": "npm-run-all clean:js clean:dts clean:doc",
        "clean:js": "rimraf ./resources/lib/**/*.js ./resources/public/js",
        "clean:dts": "rimraf ./resources/public/types",
        "clean:doc": "rimraf ./client-api",
        "doc": "typedoc --options ./typedoc.js",
        "doc:md": "STREAMS_API_MD_DOCS=true typedoc --options ./typedoc.js",
        "dts": "tsc --project webpack.tsconfig.json --emitDeclarationOnly",
        "dts:copy": "cp resources/lib/global.d.ts resources/public/js/global.d.ts",
        "test": "TS_NODE_PROJECT=./tsconfig.test.json mocha"
    },
    "streams": {
        "output": {
            "name": [
                "streams",
                "core"
            ],
            "type": "assign"
        },
        "src": "resources/lib",
        "bundler": "mix",
        "scripts": {
            "dev": "dev",
            "prod": "build",
            "watch": "watch",
            "test": "test"
        }
    },
    "dependencies": {
        "axios": "^0.21.4",
        "debug": "^4.3.2",
        "deepmerge": "^4.2.2",
        "eventemitter2": "^6.4.4",
        "inversify": "^5.1",
        "inversify-inject-decorators": "^3.1",
        "lz-string": "^1.4.4",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@types/deepmerge": "^2.2.0",
        "@types/webpack-env": "^1.16.3",
        "webpack-env": "^0.8.0"
    }
}
