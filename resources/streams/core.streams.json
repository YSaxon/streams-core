{
    "config": {
        "source": {
            "path": "/streams",
            "format": "json"
        }
    },
    "rules": {
        "id": "required"
    },
    "fields": {
        "id": {
            "type": "slug",
            "config": {
                "separator": "_"
            }
        },
        "name": {
            "type": "string",
            "required": true,
            "rules": ["max:50"]
        },
        "description": {
            "type": "string"
        },
        "config": {
            "type": "prototype",
            "config": {
                "structure": {
                    "source": {
                        "type": "select",
                        "config": {
                            "options": []
                        }
                    },
                    "schema": {
                        "type": "string"
                    },
                    "criteria": {
                        "type": "string"
                    },
                    "factory": {
                        "type": "string"
                    },
                    "repository": {
                        "type": "string"
                    }
                }
            }
        },
        "fields": {
            "type": "array"
        }
    }
}
