{
    "name": "Applications",
    "config": {
        "source": {
            "path": "streams/apps",
            "format": "json"
        },
        "abstract": "Streams\\Core\\Application\\Application"
    },
    "fields": {
        "handle": {
            "type": "string",
            "example": "spanish"
        },
        "match": {
            "type": "array",
            "description": "An array of URL patterns that match this application.",
            "example": [
                "es.example.com/*"
            ]
        },
        "config": {
            "type": "array",
            "description": "An array of configuration to be merged into existing app config.",
            "example": {
                "app": {
                    "name": "Corrientes"
                },
                "streams.core": {
                    "data_path": "streams/data/es"
                }
            }
        }
    }
}
