{
    "name": "File System",
    "description": "The Laravel filesystem.",
    "docs": "https://streams.dev/docs/core/streams/files#folders",
    "config": {
        "source": {
            "format": "json"
        }
    },
    "fields": [
        {
            "handle": "id",
            "type": "uuid",
            "required": true,
            "unique": true
        },
        {
            "handle": "path",
            "type": "string"
        },
        {
            "handle": "visibility",
            "type": "string"
        },
        {
            "handle": "last_modified",
            "type": "datetime"
        }
    ]
}
