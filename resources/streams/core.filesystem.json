{
    "name": "Filesystem",
    "description": "The Laravel file system.",
    "docs": "https://streams.dev/docs/core/streams/files",
    "config": {
        "source": {
            "format": "json"
        }
    },
    "fields": [
        {
            "handle": "id",
            "type": "uuid",
            "required": true,
            "unique": true
        },
        {
            "handle": "disk",
            "type": "string",
            "required": true
        },
        {
            "handle": "path",
            "type": "string",
            "required": true
        },
        {
            "handle": "is_dir",
            "type": "boolean"
        },
        {
            "handle": "extension",
            "type": "string"
        },
        {
            "handle": "mime_type",
            "type": "string"
        },
        {
            "handle": "size",
            "type": "integer"
        },
        {
            "handle": "visibility",
            "type": "string"
        },
        {
            "handle": "last_modified",
            "type": "datetime"
        },
        {
            "handle": "extra_metadata",
            "type": "object"
        }
    ]
}
